## ZSH
# open ~/.zshrc in using the default editor specified in $EDITOR
alias ec="nvim $HOME/.zshrc"

# source ~/.zshrc
alias sc="source $HOME/.zshrc"

## System Alias
# System Update
alias updt='sudo pacman -Syu'

# Full System Update (includes mirror updates)
alias updtf='sudo pacman -Syyu'

# IP Info
alias myip='curl https://ipinfo.io/what-is-my-ip; echo'

# Distro Info
alias distro='cat /etc/*-release'

# Generate a random password
alias getpass='openssl rand -base64 20'

# List all files grouping directories first
alias ldir='ls -lFhaSs --group-directories-first'

# displays the amount of disk space available on the mounted filesystems
alias df="pydf"

## MariaDB
#Status
alias mdstatus='systemctl status mariadb'

# Start
alias mdstart='systemctl start mariadb'

# Stop
alias mdstop='systemctl stop mariadb'

## Youtube-Viewer (needs channelId passed as a param)
# Channel List
yvchls() {
  cat .yt-channels
}

# Channel Seach
yvch() {
    cat .yt-channels |sed -n $1 | grep -o -i '"........................"' | xargs youtube-viewer -cp
}

# Playlist Search
yvpl() {
    cat .yt-channels |sed -n "${1},${1}p" | grep -o -i '"........................"' | xargs youtube-viewer -up
}

