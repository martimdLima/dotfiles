# +--------+
# | System |
# +--------+

alias shutdown='sudo shutdown now'
alias restart='sudo reboot'
alias suspend='sudo pm-suspend'

# display "big" files > 500M
alias bigf= 'find / -xdev -type f -size +500M'

# System Update
alias updt='sudo pacman -Syu'

# Full System Update (includes mirror updates)
alias updtf='sudo pacman -Syyu'

# Distro Info
alias distro='cat /etc/*-release'

# displays the amount of disk space available on the mounted filesystems
alias df="pydf"

# +-----+
# | Zsh |
# +-----+

# open ~/.zshrc in using the default editor specified in $EDITOR
alias ec="nvim $HOME/.zshrc"

# source ~/.zshrc
alias sc="source $HOME/.zshrc"

# +-------+
# | Tmux |
# +-----+

# source ~/.tmux.conf
alias stc="tmux source ~/.tmux.conf"

# +----+
# | ls |
# +----+
alias lsl='ls -l'
alias ll='ls -lahF --group-directories-first'
alias lls='ls -lahFtr'
alias la='ls -A'
alias l='ls -CF'

# +----+
# | cp |
# +----+

alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -i'
alias la='ls -alh'

# +------+
# | grep |
# +------+

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# +------+
# | ping |
# +------+

alias pg='ping 8.8.8.8'

# +----------+
# | MariaDB |
# +--------+
#Status
alias mdstatus='systemctl status mariadb'

# Start
alias mdstart='systemctl start mariadb'

# Stop
alias mdstop='systemctl stop mariadb'

# +----------------+
# | youtube-viewer |
# +----------------+
# Channel List
alias yvchls="cat .yt-channels"
